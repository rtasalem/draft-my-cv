<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../assets/css/cv-styles.css">
    <title>Harvard Resume Template</title>
</head>
<body>
    <div class="name">{{ contactInfo.name }}</div>
    <div class="header">
        {{ contactInfo.address }} • {{ contactInfo.city }}, {{ contactInfo.state }} {{ contactInfo.zip }} •
        {{ contactInfo.email }} • {{ contactInfo.phone }}
    </div>

    <h1>Education</h1>
    
    {% for edu in education %}
        <div class="education-block">
            <div>
                <span class="education-name">{{ edu.institution }}</span>
                <span class="education-location">{{ edu.location }}</span>
            </div>
            <div class="degree-line">
                {{ edu.degree }}
                {% if edu.gpa %} GPA: {{ edu.gpa }}{% endif %}
                <span style="float: right">{{ edu.graduationDate }}</span>
            </div>
            
            {% if edu.thesis %}
                <div>Thesis: {{ edu.thesis }}</div>
            {% endif %}
            
            {% if edu.coursework %}
                <div class="coursework">Relevant Coursework: {{ edu.coursework }}</div>
            {% endif %}
        </div>
    {% endfor %}
    
    {% if studyAbroad %}
        <div class="education-block">
            <div>
                <span class="education-name">Study Abroad</span>
                <span class="education-location">{{ studyAbroad.location }}</span>
            </div>
            <div>
                Study abroad coursework in {{ studyAbroad.program }}. 
                <span style="float: right">{{ studyAbroad.dates }}</span>
            </div>
        </div>
    {% endif %}
    
    {% if highSchool %}
        <div class="education-block">
            <div>
                <span class="education-name">{{ highSchool.name }}</span>
                <span class="education-location">{{ highSchool.location }}</span>
            </div>
            <div>
                {% if highSchool.details %}{{ highSchool.details }}{% endif %}
                <span style="float: right">{{ highSchool.graduationDate }}</span>
            </div>
        </div>
    {% endif %}

    <h1>Experience</h1>
    
    {% for exp in experience %}
        <div class="section">
            <div class="org-header">
                <div>{{ exp.organization }}</div>
                <div>{{ exp.location }}</div>
            </div>
            <div class="position-header">
                <div>{{ exp.position }}</div>
                <div>{{ exp.dates }}</div>
            </div>
            <ul>
                {% for bullet in exp.bullets %}
                    <li>{{ bullet }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}

    <h1>Leadership & Activities</h1>
    
    {% for activity in activities %}
        <div class="section">
            <div class="org-header">
                <div>{{ activity.organization }}</div>
                <div>{{ activity.location }}</div>
            </div>
            <div class="position-header">
                <div>{{ activity.role }}</div>
                <div>{{ activity.dates }}</div>
            </div>
            {% if activity.bullets and activity.bullets.length > 0 %}
                <ul>
                    {% for bullet in activity.bullets %}
                        <li>{{ bullet }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endfor %}

    {% if skills %}
        <h1>Skills & Interests</h1>
        
        {% if skills.technical %}
            <div class="section">
                <strong>Technical:</strong> {{ skills.technical }}
            </div>
        {% endif %}
        
        {% if skills.language %}
            <div class="section">
                <strong>Language:</strong> {{ skills.language }}
            </div>
        {% endif %}
        
        {% if skills.laboratory %}
            <div class="section">
                <strong>Laboratory:</strong> {{ skills.laboratory }}
            </div>
        {% endif %}
        
        {% if skills.interests %}
            <div class="section">
                <strong>Interests:</strong> {{ skills.interests }}
            </div>
        {% endif %}
    {% endif %}
</body>
</html>