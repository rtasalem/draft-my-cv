{% set navItems = [
    { title: 'Home', url: '/', pageName: 'submit' },
    { title: 'About', url: '/about', pageName: 'about' },
    { title: 'Disclaimer', url: '/disclaimer', pageName: 'disclaimer'},
    { title: 'Issues', url: '/issues', pageName: 'issues' }
] %}

<section class="hero is-small">
  <div class="hero-head">
    <nav class="navbar">
      <div class="container is-max-tablet">
        <div id="navbarHero" class="navbar-menu">
          <div class="navbar-start">
            <a href="/"><img class="navbar-item" src="../../assets/favicon.ico"></img></a>
            {% for navItem in navItems %}
              {% if pageName == navItem.pageName %}
              <a href="{{ navItem.url }}" class="navbar-item active">
                {% else %}
                <a href="{{ navItem.url }}" class="navbar-item">
                  {% endif %}
                    {{ navItem.title }}
                </a>
            {% endfor %}
          </div>

          <div class="navbar-end">
            <div class="navbar-brand">
              <a href="https://github.com/rtasalem/draft-my-cv" target="_blank" class="navbar-item is-size-4"><i class="fab fa-github"></i></a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="hero-body">
    <div class="container is-max-tablet">
      <a href="/"><p class="title">Draft My CV</p></a>
      <p class="subtitle">Create the perfect CV in minutes that's ready for any job application!</p>
      <hr class="bd-hr">
    </div>
  </div>
</section>