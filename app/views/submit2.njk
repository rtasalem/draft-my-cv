{% block mainContent %}
<div class="container is-max-tablet">
    <h5 class="subtitle is-4"><strong>Personal Information</strong></h5>
    <hr>

    <form action="/download" method="POST" style="display: inline;">

    <div class="field is-grouped">
      <p class="control is-expanded has-icons-left">
        <input class="input" type="text" placeholder="First/Given Names">
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </p>

      <p class="control is-expanded has-icons-left">
        <input class="input" type="text" placeholder="Last Name">
        <span class="icon is-small is-left">
          <i class="fas fa-users"></i>
        </span>
      </p>
    </div>

    <div class="field is-grouped">
      <p class="control is-expanded has-icons-left">
        <input class="input" type="text" placeholder="City or State">
        <span class="icon is-small is-left">
          <i class="fa-solid fa-city"></i>
        </span>
      </p>

      <p class="control has-icons-left">
          <span class="select">
            <select>
              <option selected>Country</option>
              <option>Select dropdown</option>
              <option>With options</option>
            </select>
          </span>
          <span class="icon is-small is-left">
            <i class="fa-solid fa-earth-europe"></i>
          </span>
        </p>
    </div>

    <div class="field is-grouped">
      <p class="control is-expanded has-icons-left">
        <input class="input" type="text" placeholder="Email Address">
        <span class="icon is-small is-left">
          <i class="fa-solid fa-envelope"></i>
        </span>
      </p>

      <div class="mb-4">
        <p class="control has-icons-left">
          <input class="input" type="tel" placeholder="Phone Number">
          <span class="icon is-small is-left">
            <i class="fa-solid fa-phone"></i>
          </span>
        </p>
        <p class="help">Please specify the area code e.g. +44</p>
      </div>
    </div>
    
    <h5 class="subtitle is-4"><strong>Education (optional)</strong></h5>
    <hr>

{% endblock mainContent %}