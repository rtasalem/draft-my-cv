{% extends 'layout.njk' %}

{% set title = 'About' %}

{% set buttons = [
    { title: 'GitHub', url: 'https://github.com/rtasalem', icon: 'fab fa-github' },
    { title: 'Portfolio', url: 'http://ranasalem.io/', icon: 'fa-solid fa-globe' },
    { title: 'LinkedIn', url: 'https://www.linkedin.com/in/ranatasalem/', icon: 'fa-brands fa-linkedin' },
    { title: 'Email', url: 'mailto:ranatasalem@gmail.com', icon: 'fa-solid fa-envelope' }
] %}

{% block mainContent %}
  <div class="container is-max-widescreen">
    <h5 class="subtitle is-4"><strong>About the Project</strong></h5>
    <article class="message is-medium">
      <div class="message-body">
        <strong>Draft My CV</strong> is a tool for anyone currently going through the process of 
