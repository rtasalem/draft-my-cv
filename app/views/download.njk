{% extends 'layout.njk' %}

{% set title = 'Download' %}

{% set fileTypes = [
    { title: 'PDF File', buttonClass: 'is-danger', action: '/generate-pdf', icon: 'fa-solid fa-file-pdf' },
    { title: 'Word Document', buttonClass: 'is-link', action: '/generate-word', icon: 'fa-solid fa-file-word' }
] %}

{% block mainContent %}
  <div class="container is-max-widescreen">
    <h5 class="subtitle is-4"><strong>Download</strong></h5>
    <hr>
    <div class="buttons is-centered">
      <p class="buttons">
        {% for fileType in fileTypes %}
        <form action="{{ fileType.action }}" method="GET" style="display: inline;">
          <button class="button {{ fileType.buttonClass }} is-large">
            <span class="icon is-dark">
              <i class="{{ fileType.icon }}"></i>
            </span>
            <span>{{ fileType.title }}</span>
          </button>
        </form>
        {% endfor %}
      </p>
    </div>
  </div>
{% endblock mainContent %}