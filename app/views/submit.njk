          class="input"
          id="undergraduate-graduation-year" 
          name="undergraduateGraduationYear"
          type="number" 
          min="1900"
          max="2025"
          step="1"
          {# need to dynamically set the maximum year to always update to the current year #}
          placeholder="Graduation Year"
          >
        <span class="icon is-small is-left">
          <i class="fa-solid fa-calendar"></i>
        </span>
      </p>
    </div>

    <div class="field is-grouped mb-5">
