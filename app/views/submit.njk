{% extends 'layout.njk' %}

{% block mainContent %}
<div class="container is-max-tablet">
  <form action="/download" method="POST" style="display: inline;">

  <h5 class="subtitle is-4"><strong>Personal Information</strong></h5>
  <hr>

  <div class="field is-grouped">
    <p class="control is-expanded has-icons-left">
      <input 
        class="input" 
        id="first-given-names" 
        name="fistGivenNames" 
        type="text" 
        placeholder="First/Given Names" 
        required
      >
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </p>

    <p class="control is-expanded has-icons-left">
      <input 
        class="input" 
        id="last-name"
        name="lastName"
        type="text" 
        placeholder="Last Name"
        required
      >
      <span class="icon is-small is-left">
        <i class="fas fa-users"></i>
      </span>
    </p>
  </div>

  <div class="field is-grouped">
    <p class="control is-expanded has-icons-left">
      <input 
        class="input" 
        id="city-or-state"
        name="cityOrState"
        type="text" 
        placeholder="City or State"
        required
      >
      <span class="icon is-small is-left">
        <i class="fa-solid fa-city"></i>
      </span>
    </p>

    <p class="control has-icons-left">
      <span class="select">
        <select 
          id="country" 
          name="country" 
          required
        >
          <option selected>Country</option>
          <option>Select dropdown</option>
        </select>
      </span>
      <span class="icon is-small is-left">
        <i class="fa-solid fa-earth-europe"></i>
      </span>
    </p>
  </div>

  <div class="field is-grouped">
    <p class="control is-expanded has-icons-left">
      <input 
        class="input" 
        id="email-address"
        name="emailAddress"
        type="email" 
        placeholder="Email Address"
        required
      >
      <span class="icon is-small is-left">
        <i class="fa-solid fa-envelope"></i>
      </span>
    </p>

    <div class="mb-5">
      <p class="control has-icons-left">
        <input 
          class="input" 
          id="phone-number"
          name="phoneNumber"
          type="tel" 
          placeholder="Phone Number"
          required
        >
        <span class="icon is-small is-left">
          <i class="fa-solid fa-phone"></i>
        </span>
      </p>
      <p class="help">Please specify the area code e.g. +44</p>
    </div>
  </div>
  
  <h5 class="subtitle is-4"><strong>Education (optional)</strong></h5>
