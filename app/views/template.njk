<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Draft My CV Template</title>
        <link rel="stylesheet" href="../assets/css/cv.css">
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1>{{ firstName }} {{ lastName }}</h1>
            </div>
            
            <div class="contact-info">
                {% if city %}{{ city }}{% endif %}{% if country %}, {{ country }}{% endif %} • 
                {{ emailAddress }} • 
                {% if callingCode %}{{ callingCode }}{% endif %} {{ phoneNumber }}
            </div>

            <h2>Education</h2>
            
            {% if ugUniversity %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ ugUniversity }}</span>
                    <span class="date-location">{{ ugLocation }}</span>
                </div>
                <div class="degree-line">
                    <span>{{ ugDegree }}</span>
                    <span class="date-location">Graduation: {{ ugGraduationYear }}</span>
                </div>
                {% if ugDissertationTitle %}
                <div>Thesis: {{ ugDissertationTitle }}</div>
                {% endif %}
                {% if ugGrade %}
                <div>Grade: {{ ugGrade }}</div>
                {% endif %}
            </div>
            {% endif %}

            {% if pgUniversity %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ pgUniversity }}</span>
                    <span class="date-location">{{ pgCityOrState }}</span>
                </div>
                <div class="degree-line">
                    <span>{{ pgDegree }}</span>
                    <span class="date-location">Graduation: {{ pgGraduationYear }}</span>
                </div>
                {% if pgDissertationTitle %}
                <div>Thesis: {{ pgDissertationTitle }}</div>
                {% endif %}
                {% if pgGrade %}
                <div>Grade: {{ pgGrade }}</div>
                {% endif %}
            </div>
            {% endif %}

            {% if exchangeUniversity %}
            <div class="entry">
                <div class="org-line">
                    <span>Study Abroad: {{ exchangeUniversity }}</span>
                    <span class="date-location">{{ exchangeCityOrState }}</span>
                </div>
                <div class="degree-line">
                    <span>{{ exchangeDegreeProgramme }}</span>
                    <span class="date-location">{{ exchangeYear }}</span>
                </div>
            </div>
            {% endif %}

            {% if highSchool %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ highSchool }}</span>
                    <span class="date-location">Graduation: {{ hsGraduationYear }}</span>
                </div>
            </div>
            {% endif %}

            <h2>Experience</h2>

            {% if jobTitle1 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ jobCompany1 }}</span>
                    <span class="date-location">{{ jobStart1 }} – {{ jobEnd1 }}</span>
                </div>
                <div><strong>{{ jobTitle1 }}</strong></div>
                <ul>
                    {% for line in jobSummary1.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if jobTitle2 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ jobCompany2 }}</span>
                    <span class="date-location">{{ jobStart2 }} – {{ jobEnd2 }}</span>
                </div>
                <div><strong>{{ jobTitle2 }}</strong></div>
                <ul>
                    {% for line in jobSummary2.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if jobTitle3 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ jobCompany3 }}</span>
                    <span class="date-location">{{ jobStart3 }} – {{ jobEnd3 }}</span>
                </div>
                <div><strong>{{ jobTitle3 }}</strong></div>
                <ul>
                    {% for line in jobSummary3.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if projectTitle1 or projectTitle2 or projectTitle3 %}
            <h2>Projects</h2>

            {% if projectTitle1 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ projectTitle1 }}</span>
                    {% if projectUrl1 %}
                    <span class="date-location"><a href="{{ projectUrl1 }}" target="_blank">{{ projectUrl1 }}</a></span>
                    {% endif %}
                </div>
                <ul>
                    {% for line in projectSummary1.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if projectTitle2 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ projectTitle2 }}</span>
                    {% if projectUrl2 %}
                    <span class="date-location"><a href="{{ projectUrl2 }}" target="_blank">{{ projectUrl2 }}</a></span>
                    {% endif %}
                </div>
                <ul>
                    {% for line in projectSummary2.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if projectTitle3 %}
            <div class="entry">
                <div class="org-line">
                    <span>{{ projectTitle3 }}</span>
                    {% if projectUrl3 %}
                    <span class="date-location"><a href="{{ projectUrl3 }}" target="_blank">{{ projectUrl3 }}</a></span>
                    {% endif %}
                </div>
                <ul>
                    {% for line in projectSummary3.split('\n') %}
                        {% if line.trim() %}
                            <li>{{ line }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            {% endif %}

            <h2>Skills & Interests</h2>
            
            <div class="skills-section">
                <ul>
                    {% if interest1 %}<li>{{ interest1 }}</li>{% endif %}
                    {% if interest2 %}<li>{{ interest2 }}</li>{% endif %}
                    {% if interest3 %}<li>{{ interest3 }}</li>{% endif %}
                    {% if interest4 %}<li>{{ interest4 }}</li>{% endif %}
                    {% if interest5 %}<li>{{ interest5 }}</li>{% endif %}
                    {% if interest6 %}<li>{{ interest6 }}</li>{% endif %}
                </ul>
            </div>
        </div>
    </body>
</html>