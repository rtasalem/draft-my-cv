<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Resume</title>
    </head>
    <body>
        <h1>{{ firstName }}
            {{ lastName }}</h1>
        <p>
            <strong>Email:</strong>
            {{ emailAddress }}</p>
        <p>
            <strong>Phone:</strong>
            {{ callingCode }}
            {{ phoneNumber }}</p>
        <p>
            <strong>Location:</strong>
            {{ location }}, {{ country }}</p>

        <hr>
        <h2>Education</h2>

        {% if ugUniversity %}
            <h3>Undergraduate</h3>
            <p>
                <strong>University:</strong>
                {{ ugUniversity }}</p>
            <p>
                <strong>Location:</strong>
                {{ ugLocation }}</p>
            <p>
                <strong>Degree:</strong>
                {{ ugDegree }}</p>
            <p>
                <strong>Graduation Year:</strong>
                {{ ugGraduationYear }}</p>
            <p>
                <strong>Dissertation:</strong>
                {{ ugDissertationTitle }}</p>
            <p>
                <strong>Grade:</strong>
                {{ ugGrade }}</p>
        {% endif %}

        {% if pgUniversity %}
            <h3>Postgraduate</h3>
            <p>
                <strong>University:</strong>
                {{ pgUniversity }}</p>
            <p>
                <strong>Location:</strong>
                {{ pgCityOrState }}</p>
            <p>
                <strong>Degree:</strong>
                {{ pgDegree }}</p>
            <p>
                <strong>Graduation Year:</strong>
                {{ pgGraduationYear }}</p>
            <p>
                <strong>Dissertation:</strong>
                {{ pgDissertationTitle }}</p>
            <p>
                <strong>Grade:</strong>
                {{ pgGrade }}</p>
        {% endif %}

        {% if exchangeUniversity %}
            <h3>Study Abroad (Exchange)</h3>
            <p>
                <strong>University:</strong>
                {{ exchangeUniversity }}</p>
            <p>
                <strong>Location:</strong>
                {{ exchangeCityOrState }}</p>
            <p>
                <strong>Degree/Programme:</strong>
                {{ exchangeDegreeProgramme }}</p>
            <p>
                <strong>Year:</strong>
                {{ exchangeYear }}</p>
        {% endif %}

        {% if highSchool %}
            <h3>High School</h3>
            <p>
                <strong>School:</strong>
                {{ highSchool }}</p>
            <p>
                <strong>Graduation Year:</strong>
                {{ hsGraduationYear }}</p>
        {% endif %}

        <hr>
        <h2>Work Experience</h2>

        {% if jobTitle1 %}
            <h3>{{ jobTitle1 }} - {{ jobCompany1 }}</h3>
            <p>
                <strong>From:</strong>
                {{ jobStart1 }}
                <strong>To:</strong>
                {{ jobEnd1 }}</p>
            <p>{{ jobSummary1 }}</p>
        {% endif %}

        {% if jobTitle2 %}
            <h3>{{ jobTitle2 }} - {{ jobCompany2 }}</h3>
            <p>
                <strong>From:</strong>
                {{ jobStart2 }}
                <strong>To:</strong>
                {{ jobEnd2 }}</p>
            <p>{{ jobSummary2 }}</p>
        {% endif %}

        {% if jobTitle3 %}
            <h3>{{ jobTitle3 }} - {{ jobCompany3 }}</h3>
            <p>
                <strong>From:</strong>
                {{ jobStart3 }}
                <strong>To:</strong>
                {{ jobEnd3 }}</p>
            <p>{{ jobSummary3 }}</p>
        {% endif %}

        <hr>
        <h2>Interests</h2>
        <ul>
            {% if interest1 %}
                <li>{{ interest1 }}</li>
            {% endif %}
            {% if interest2 %}
                <li>{{ interest2 }}</li>
            {% endif %}
            {% if interest3 %}
                <li>{{ interest3 }}</li>
            {% endif %}
            {% if interest4 %}
                <li>{{ interest4 }}</li>
            {% endif %}
            {% if interest5 %}
                <li>{{ interest5 }}</li>
            {% endif %}
            {% if interest6 %}
                <li>{{ interest6 }}</li>
            {% endif %}
        </ul>
    </body>
</html>