{% set navItemsStart = [
    { title: 'Home', url: '/', pageName: 'submit' },
    { title: 'About', url: '/about', pageName: 'about' },
    { title: 'Issues', url: '/issues', pageName: 'issues' },
    { title: 'Disclaimer', url: '/disclaimer', pageName: 'disclaimer' }

] %}

{% set navItemsEnd = [
    { title: 'GitHub', url: 'https://github.com/rtasalem', icon: 'fab fa-github' },
    { title: 'Portfolio', url: 'http://ranasalem.io/', icon: 'fa-solid fa-globe' },
    { title: 'LinkedIn', url: 'https://www.linkedin.com/in/ranatasalem/', icon: 'fa-brands fa-linkedin' }
] %}

<section class="hero is-small">
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div id="navbarHero" class="navbar-menu">
          <div class="navbar-start">
          {% for navItem in navItemsStart %}
              {% if pageName == navItem.pageName %}
              <a href="{{ navItem.url }}" class="navbar-item active">
                {% else %}
                <a href="{{ navItem.url }}" class="navbar-item">
                  {% endif %}
                    {{ navItem.title }}
                </a>
            {% endfor %}
          </div>

          <div class="navbar-end">
            <div class="navbar-brand">
              <p class="navbar-item">Developed by Rana Salem</p>
            </div>
            <p class="buttons">
            {% for navItem in navItemsEnd %}
              <a href="{{ navItem.url }}" class="button is-black" target="_blank">
                <span class="icon">
                  <i class="{{ navItem.icon }}"></i>
                </span>
                <span>{{ navItem.title }}</span>
              </a>
            {% endfor %}
            </p>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="hero-body">
    <div class="container">
      <a href="/"><p class="title">Draft My CV</p></a>
      <p class="subtitle">Create the perfect CV in seconds that's ready for any job application! Fill in the form below to get started.</p>
      <hr class="bd-hr">
    </div>
  </div>
</section>